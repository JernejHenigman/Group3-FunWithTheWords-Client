        <Button
            android:id="@+id/btn_3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="E"/>

        <Button
            android:id="@+id/btn_4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
