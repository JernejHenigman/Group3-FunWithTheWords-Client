        <Button
            android:id="@+id/btn_25"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="N"/>

        <Button
            android:id="@+id/btn_26"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="M"/>

        <Button
            android:id="@+id/btn_99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>

